<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Admin Dashboard | Drone</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico"/>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css"/>
    <link href="css/styles.css" rel="stylesheet"/>
</head>

<body id="page-top">

<%- include('partials/adminHeader') %>
<!-- Masthead-->
<header class="masthead">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title">Statistics</div>
                        <div id="echartBar" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title">Pie Chart</div>
                        <div id="echartPie" style="height: 300px;"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="card-title">Sales Over Time</div>
                    <div id="echartLine" style="height: 300px;"></div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</header>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/es5/echart.options.min.js"></script>
<script src="/js/echarts.min.js"></script>
<script src="/js/es5/script.min.js"></script>
<script src="/js/es5/sidebar.large.script.min.js"></script>
<!-- Core theme JS-->
<script src="/js/scripts.js"></script>
<script>
    let statistics = JSON.parse('<%- JSON.stringify(statistics) %>');
    let echartElemBar = document.getElementById('echartBar');
    if (echartElemBar) {
        let echartBar = echarts.init(echartElemBar, {renderer: 'canvas'});
        echartBar.setOption({
            backgroundColor: 'transparent',
            legend: {
                borderRadius: 0,
                orient: 'horizontal',
                x: 'right',
                data: ['Orders', 'Quantity', 'Total Price']

            },
            grid: {
                left: '8px',
                right: '8px',
                bottom: '0',
                containLabel: true
            },
            tooltip: {
                show: true,
                backgroundColor: 'rgba(0, 0, 0, .8)'
            },
            xAxis: [{
                type: 'category',
                data: statistics.userData,
                axisTick: {
                    alignWithLabel: true
                },
                splitLine: {
                    show: true
                },
                axisLine: {
                    show: true
                }
            }],
            yAxis: [{
                type: 'value',
                axisLabel: {
                    formatter: '{value}'
                },
                axisLine: {
                    show: false
                },
                splitLine: {
                    show: true,
                    interval: 'auto'
                }
            }],

            series: [
                {
                    name: 'Orders',
                    data: statistics.countData,
                    label: {show: false, color: '#0168c1'},
                    type: 'bar',
                    barGap: 0,
                    color: '#bcbbdd',
                    smooth: true,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowOffsetY: -2,
                            shadowColor: 'rgba(0, 0, 0, 0.3)'
                        }
                    }
                },
                {
                    name: 'Quantity',
                    data: statistics.quantityData,
                    label: {show: false, color: '#639'},
                    type: 'bar',
                    color: '#e9340e',
                    smooth: true,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowOffsetY: -2,
                            shadowColor: 'rgba(0, 0, 0, 0.3)'
                        }
                    }
                },
                {
                    name: 'Total Price',
                    data: statistics.totalPriceData,
                    label: {show: false, color: '#639'},
                    type: 'bar',
                    color: '#297dd1',
                    smooth: true,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowOffsetY: -2,
                            shadowColor: 'rgba(0, 0, 0, 0.3)'
                        }
                    }
                }
            ]
        });
        $(window).on('resize', function () {
            setTimeout(() => {
                echartBar.resize();
            }, 500);
        });
    }
    const pieChartElement = document.getElementById('echartPie');

    if (pieChartElement) {
        const pieChart = echarts.init(pieChartElement, { renderer: 'canvas' });
        pieChart.setOption({
            backgroundColor: 'transparent',
            legend: {
                orient: 'vertical',
                x: 'left',
                data: ['Orders', 'Quantity', 'Total Price'],
            },
            series: [
                {
                    name: 'Sales Data',
                    type: 'pie',
                    radius: '70%',
                    data: [
                        { value: statistics.countData, name: 'Orders' },
                        { value: statistics.quantityData, name: 'Quantity' },
                        { value: statistics.totalPriceData, name: 'Total Price' },
                    ],
                },
            ],
        });
        $(window).on('resize', () => {
            setTimeout(() => {
                pieChart.resize();
            }, 500);
        });
    }

    // Line Chart
    let sales = JSON.parse('{"dates": ["2023-07-01", "2023-07-02", "2023-07-03"], "sales": [10, 20, 15]}');
    console.log('Sales:', sales);  // For debugging
    console.log('Dates:', sales.dates);  // For debugging
    console.log('Sales Data:', sales.sales);  // For debugging

    let lineChartElem = document.getElementById('echartLine');
    if (lineChartElem) {
        let echartLine = echarts.init(lineChartElem, {renderer: 'canvas'});
        echartLine.setOption({
            backgroundColor: 'transparent',
            xAxis: {
                type: 'category',
                data: sales.dates
            },
            yAxis: {
                type: 'value'
            },
            series: [{
                data: sales.sales,
                type: 'line',
                smooth: true,
                color: '#4caf50'
            }]
        });
        $(window).on('resize', function () {
            setTimeout(() => {
                echartLine.resize();
            }, 500);
        });
    }

</script>
</body>

</html>